{
  "name": "edwrodrig/hapi",
  "description": "Mi nueva biblioteca para manejar HTTP requests y responses",
  "authors": [
    {
      "name": "Edwin Rodríguez-León",
      "email": "edwrodrig@gmail.com",
      "homepage": "http://www.edwin.cl",
      "role": "Developer"
    }
  ],
  "license": "MIT",
  "minimum-stability": "stable",
  "require": {
    "php": "^7.4",
    "edwrodrig/exception_with_data" : "dev-master",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "mikey179/vfsstream": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "edwrodrig\\hapi\\": "src/",
      "edwrodrig\\hapi_core\\": "modules/core/src/"
    },
    "exclude-from-classmap": ["modules/core/src/BuiltInServer.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "test\\edwrodrig\\hapi\\": "tests/",
      "test\\edwrodrig\\hapi_core\\": "modules/core/tests/"
    },
    "files" : [
      "modules/core/src/BuiltInServer.php"
    ]
  },
  "archive": {
    "exclude": [
      "/.git",
      "/.idea",
      "/examples",
      "/scripts",
      "/tests",
      "/modules/core/tests",
      "/.gitignore",
      "/.phpunit.result.cache",
      "/phpunit.xml.dist",
      "/README.md",
      "/.travis.yml"
    ]
  }
}
