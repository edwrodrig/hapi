{
  "name": "labo86/hapi",
  "description": "Mi nueva biblioteca para manejar HTTP requests y responses",
  "authors": [
    {
      "name": "Edwin Rodríguez-León",
      "email": "edwrodrig6@gmail.com",
      "homepage": "http://www.edwin.cl",
      "role": "Developer"
    }
  ],
  "license": "MIT",
  "minimum-stability": "stable",
  "require": {
    "php": "^7.4",
    "labo86/exception_with_data" : "^2.2",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "mikey179/vfsstream": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "labo86\\hapi\\": "src/"
    },
    "exclude-from-classmap": [
      "src/BuiltInServer.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "test\\labo86\\hapi\\": "test/",
      "test\\labo86\\hapi\\local\\": "test/local/"
    },
    "files" : [
      "src/BuiltInServer.php"
    ]
  },
  "archive": {
    "exclude": [
      "/.git",
      "/.idea",
      "/examples",
      "/scripts",
      "/test",
      "/.gitignore",
      "/.phpunit.result.cache",
      "/phpunit.xml.dist",
      "/README.md",
      "/.travis.yml"
    ]
  }
}
